<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup_layout_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.SignUpActivity">

    <LinearLayout
        android:id="@+id/signup_layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/signup_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/signup_title"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/signup_label_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signup_input_name" />

        <EditText
            android:id="@+id/signup_input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="@string/signup_input_name"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/signup_label_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signup_input_email" />

        <EditText
            android:id="@+id/signup_input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="@string/signup_input_email"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/signup_label_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signup_input_username" />

        <EditText
            android:id="@+id/signup_input_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="@string/signup_input_username"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/signup_label_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signup_input_password" />

        <EditText
            android:id="@+id/signup_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/signup_input_password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/signup_button_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="submit"
            android:text="@string/signup_button_submit" />

        <Button
            android:id="@+id/signup_button_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="back"
            android:text="@string/signup_button_back" />
    </LinearLayout>
</ScrollView>